{
  "nodeModulesDir": "manual",
  "tasks": {
    "check": "deno fmt --check . && deno lint . && deno check",
    "dev": "vite",
    "build": "vite build",
    "start": "deno serve -A _fresh/server.js",
    "update": "deno run -A -r jsr:@fresh/update ."
  },
  "lint": {
    "rules": {
      "tags": ["fresh", "recommended"]
    }
  },
  "exclude": ["**/_fresh/*"],
  "imports": {
    "@/": "./",
    "fresh": "jsr:@fresh/core@^2.1.4",
    "preact": "npm:preact@^10.27.2",
    "@preact/signals": "npm:@preact/signals@^2.3.2",
    "@fresh/plugin-vite": "jsr:@fresh/plugin-vite@^1.0.7",
    "@lps/volcano": "../src/mod.ts",
    "vite": "npm:vite@^7.1.3",
    "@cross/image": "jsr:@cross/image@^0.4.1",
    "@std/assert": "jsr:@std/assert@^1.0.15",
    "@std/crypto": "jsr:@std/crypto@^1.0.5",
    "@std/encoding": "jsr:@std/encoding@^1.0.10",
    "@std/path": "jsr:@std/path@^1.1.2",
    "@std/yaml": "jsr:@std/yaml@^1.0.10",
    "@zod/zod": "jsr:@zod/zod@^4.1.12",
    "slugify": "npm:@sindresorhus/slugify@^3.0.0",
    "unified": "npm:unified@^11.0.5",
    "remark-parse": "npm:remark-parse@^11.0.0",
    "remark-frontmatter": "npm:remark-frontmatter@^5.0.0",
    "remark-directive": "npm:remark-directive@^3.0.0",
    "unist-util-visit": "npm:unist-util-visit@^5.0.0",
    "prism-esm": "npm:prism-esm@^1.29.0-fix.6"
  },
  "compilerOptions": {
    "lib": ["dom", "dom.asynciterable", "dom.iterable", "deno.ns"],
    "jsx": "precompile",
    "jsxImportSource": "preact",
    "jsxPrecompileSkipElements": [
      "a",
      "img",
      "source",
      "body",
      "html",
      "head",
      "title",
      "meta",
      "script",
      "link",
      "style",
      "base",
      "noscript",
      "template"
    ],
    "types": ["vite/client"]
  }
}
